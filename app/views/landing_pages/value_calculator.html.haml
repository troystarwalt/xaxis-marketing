            .col-xs-12.col-sm-4.col-md-4.center-column.medium-margin-bottom.medium-margin-top.pbu_comparisons
              .col-sm-10.offset-sm-1.text-xs-center
                %h4.text-xs-center.dark-blue-text.gotham-medium.big-margin-bottom
                  More Impressions
                %p.text-xs-center.no-margin
                  %span#moreImpressionsPBUPct.blue-text.boldest-numbers.gotham-medium
                %p.gotham-medium
                  Xaxis serves
                  %span#moreImpressionsPBUPct2.blue-text.gotham-medium
                  %span.blue-text.gotham-medium more
                  impressions
                %br/
                %br/
                %p
                  %strong
                    %span#impressionsVsPBU.impressionScount.blue-text.gotham-book
                  %br/
                  more total impressions
                  %br/
                .benchmark
                  %hr/
                  %strong
                    %span#viewableImpressionsVsPBU.impressionScount.blue-text.gotham-book
                  %br/
                  more viewable impressions
                  %br/
            .col-xs-12.col-sm-4.col-md-4.right-column.medium-margin-bottom.medium-margin-top
              .col-sm-10.offset-sm-1.text-xs-center
                %h4.dark-blue-text.gotham-medium.big-margin-bottom
                  Cost Needed To Match
                %p.text-xs-center.no-margin
