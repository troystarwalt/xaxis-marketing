.col-md-8.offset-md-1.col-sm-12
  .brand-assets-container
    .section#assets-welcome
      = image_tag "brand-logos/#{brand.slug}_logo.png", class: "img-fluid brand-assets-top-logo"
      = content[:welcome].html_safe
      -# - if brand.brand_accessories.has_category("ppt_template").any?
      = link_to "download template", brand.brand_accessories.has_category("ppt_template").last.file_url, class: "brand-btn-primary xaxis-btn-primary"
    %hr
    .section#assets-facts
      %h3.text-uppercase #{brand.name} Fast Facts
      -# Render each brand's boiler plate.
      .nav#sub-nav
        - @brands.each do |brand|
          - if brand.name != "One Xaxis"
            = link_to brand.name, fetch_facts_path(brand_id: brand.id), remote: true, class: "nav-item sub-links", id: "switch-boiler-plate"
      #assets-boilerplate
        #selected-boilerplate
          =render partial: "facts", locals: {selected: @selected, other_content: @other_content}

