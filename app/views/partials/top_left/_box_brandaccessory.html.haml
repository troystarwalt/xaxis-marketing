.grid-content-container
  .row
    .col-lg-12
      %p.text-uppercase.content-text.content-text-sub.color-grid-text
        %span= @most_recent_update.category.humanize
        %span.vertical-bar|
        %span= @most_recent_update.brand.name
        %span.vertical-bar|
        %span= @most_recent_update.pretty_date
  .row
    .col-sm-8
      %h1.content-header.color-grid-text= @most_recent_update.name.titleize
    .col-sm-4
      .grid-img
        = image_tag "clapper.svg", alt: "Director", class: "svg-img  hidden-sm-down"
.link-container
  =link_to "view #{@most_recent_update.category.humanize}", brand_path(@most_recent_update.brand.slug), class: "text-uppercase btn color-grid-btn"
