#news-container.section-container
  .section-name#news-section
    %h1.header.text-uppercase Latest News
  .content-container#latest-news
    .row
      .col-md-6.col-sm-12.hidden-xs-down
        #currently_selected_event_container
          .icon-info.row
            .col-md-12
              .circle70
                .circle_text MKT
              .content-text.content-text-sub.text-uppercase
                .content-text-sub_inner_text
                  %span#single-news_tag_list.tag_list= @posts.first.get_tag_list.to_sentence
                  |
                  %span#single-news_date.date= @posts.first.pretty_date
          .selected-news_content
            %h1.content-header#single-news_title.news-title= @posts.first.title
            %img#single-news_image{src: @posts.first.image.url, class: 'img-fluid-width'}
            %p.content-text#single-news_text.news-text= @posts.first.text
            %p.readmore= link_to 'Read More', post_path(@posts.first), class: "readmore-link", id: 'single-news_readmore'
      .col-md-6.col-sm-12
        .recent_news_container
          - @posts.each_with_index do |post, index|
            -
            .single-news-container{"data-postId" => post.id, class: ('active' if index == 0) }
              .single-news-text
                %h1.content-header= post.title
                %p.content-text= post.text
  .more-updates-button.text-xs-right
    = link_to posts_path do
      MORE UPDATES
      %i.fa.fa-angle-right{'aria-hidden' => "true"}
