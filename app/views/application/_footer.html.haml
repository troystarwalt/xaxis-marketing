.container-fluid.footer-container
  %footer
    .container
      .row.footer-nav
        .col-sm-8.offset-sm-2
          .row.footer-nav-row
            .col-md-4.col-xs-6.footer-column
              =link_to 'Home', "#", class: 'footer-main-link'
              %ul.footer-list
                %li= link_to 'Xaxis Internal', root_path
                %li= link_to 'xaxis.com', "http://xaxis.com"
                %li= link_to 'News/Updates', "#"
            .col-md-4.col-xs-6.footer-column
              =link_to 'Brand Assets', "#", class: 'footer-main-link'
              %ul.footer-list
                - Brand.all.each do |brand|
                  %li= link_to "#{brand.name} Brand Assets", brand_path(brand)
            .col-md-4.col-xs-6.footer-column
              =link_to 'Products & Tutorials', "#", class: 'footer-main-link'
              %ul.footer-list
                -Platform.all.each do |platform|
                  %li= link_to "#{platform.name}", platform_path(platform)
                %li= link_to '101 Series', "#"
                %li= link_to 'All Case Studies', case_studies_path
                %li= link_to 'All Sell Sheets', "#"
            .col-md-4.col-xs-6.footer-column
              =link_to 'Utilities', "#", class: 'footer-main-link'
              %ul.footer-list
                %li= link_to 'Calculator', "/value-calculator"
                %li= link_to 'Expert Videos', "/expert-video-hub"
                %li= link_to "Admin Panel", admin_dashboard_path if current_admin_user

            .col-md-4.col-xs-6.footer-column
              =link_to 'Presentation Hub', presentation_hub_path, class: 'footer-main-link'
    .container
