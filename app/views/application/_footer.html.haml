.container-fluid.footer-container
  %footer
    .container
      .row.footer-nav
        .col-xs-12
          .row.footer-nav-row
            .col-md-3.col-sm-4.col-xs-6.footer-column
              =link_to 'Home', root_path, class: 'footer-main-link'
              %ul.footer-list
                %li= link_to 'Xaxis.com', "https://xaxis.com", target: "_blank"
                %li= link_to 'News/Updates', posts_path
                %li= link_to 'Project Request', "https://goo.gl/forms/OwhsgR0vKni8gdgx1", target: "_blank"
                %li= link_to 'Feedback', new_contact_path
            .col-md-3.col-sm-4.col-xs-6.footer-column
              =link_to 'Brand Assets', brand_path(@xaxis), class: 'footer-main-link'
              %ul.footer-list
                - Brand.all.each do |brand|
                  %li= link_to "#{brand.name} Brand Assets", brand_path(brand)
            .col-md-3.col-sm-4.col-xs-6.footer-column
              =link_to 'Platform Assets', platform_path(@turbine), class: 'footer-main-link'
              %ul.footer-list
                -Platform.all.each do |platform|
                  %li= link_to "#{platform.name}", platform_path(platform)
                %li= link_to 'All Case Studies', case_studies_path
            .col-md-3.col-sm-4.col-xs-6.footer-column
              =link_to 'Learning/Pages', value_calculator_path, class: 'footer-main-link'
              %ul.footer-list
                %li= link_to 'Value Calculator', value_calculator_url
                %li= link_to 'Expert Interviews Hub', expert_interview_hub_url
                %li= link_to 'Presentation Hub', presentation_hub_path
                %li= link_to '101 Series', "https://xaxis.hs-sites.com/101-series", target: "_blank"
                %li= link_to "Admin Panel", admin_dashboard_path if current_admin_user
