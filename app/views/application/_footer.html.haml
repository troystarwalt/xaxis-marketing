            .col-sm-3.col-6.footer-column
              %p.footer-main-link Landing Pages
              %ul.footer-list
                %li= link_to 'Value Calculator', value_calculator_url
                %li= link_to 'Presentation Hub', presentation_hub_path
                %li= link_to "Turbine Showcase", "http://xaxis.hs-sites.com/turbine-video-showcase"
                %li= link_to "Google Partnership", "http://xaxis.hs-sites.com/xaxis-google-partnership"
